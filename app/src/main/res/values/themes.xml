<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheMovflix" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/rubik</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Movflix.TextTitle" parent="Theme.TheMovflix">
        <item name="android:letterSpacing">0</item>
        <item name="android:lineHeight" tools:targetApi="p">28sp</item>
        <item name="lineHeight">28sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Movflix.SubTitle" parent="Theme.TheMovflix">
        <item name="android:letterSpacing">0</item>
        <item name="android:lineHeight" tools:targetApi="p">28sp</item>
        <item name="lineHeight">28sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Movflix.GenreTitle" parent="Theme.TheMovflix">
        <item name="android:letterSpacing">0</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#7AA0C1</item>
    </style>
</resources>